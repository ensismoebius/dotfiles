#######################
#       Windows       #
#######################

# Hides the windows title bar but show the edges 
# to help out indentify who is selected
for_window [class="^.*"] border pixel 1
hide_edge_borders none

# Top level windows should float too
for_window [class="Toplevel"] floating enable
for_window [class="Toplevel"] move position center

# Format dialogs properly
for_window [window_type="dialog"] floating enable
for_window [window_type="dialog"] resize set 800 600
for_window [window_type="dialog"] move position center

# Format splashes properly
for_window [window_type="splash"] floating enable
for_window [window_type="splash"] move position center

# Stops microsoft teams annoying me
for_window [title="Microsoft Teams Notification"] floating enable
for_window [title="Notificação do Microsoft Teams"] floating enable

# Android emulator floats by default
for_window [title=".*Android Emulator.*"] floating enable

# Move the dropdow window to scratchpad (aka hides)
# Enables a floating terminal 
for_window [instance="floatingTerm"] floating enable
for_window [instance="floatingTerm"] resize set 1366 350
for_window [instance="floatingTerm"] move scratchpad
for_window [instance="floatingTerm"] border pixel 5

#######################
#    System font      #
#######################

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font xft:Droid Sans Mono, Linux Libertine Initials

################################
# i3 Modes and modes shortcuts #
################################

# Press the print-screen key to enter in the "screenshot mode"
# Press esc or return to go back to default mode
set $screenshot_mode Do you want a [f]ull or [r]egion screenshot?
bindsym Print mode "$screenshot_mode"

mode "$screenshot_mode" {
	bindsym f exec filename=$(date +"/tmp/screenshot_%Y-%m-%d-%H:%M:%S.png") && import -window root $filename && notify-send "Copied to clipboard! Saved on $filename" && xclip -se c -t image/png -i $filename; mode "default"
	bindsym r --release exec filename=$(date +"/tmp/screenshot_%Y-%m-%d-%H:%M:%S.png")&& import $filename && notify-send "Copied to clipboard! Saved on $filename" && xclip -se c -t image/png -i $filename; mode "default"

        # back to normal: Enter or Escape
	bindsym Escape mode "default"
	bindsym Return mode "default"
}


# Press $Mod+o to enter in the "launch mode"
# Press esc or return to go back to default mode
set $mode_launcher [c]-IDE, [b]rowser, [f]ile Manager, [w]ifi, [t]exstudio, [e]quation editor, [m]ount media, [d]ate and calendar, [a]genda, batch store in [u]sb drives
bindsym $Mod+o mode "$mode_launcher"

mode "$mode_launcher" {
	bindsym c exec /opt/eclipse_c/eclipse; mode "default"
	bindsym b exec firefox; mode "default"
	bindsym t exec texstudio; mode "default"
	bindsym e exec equalx; mode "default"
	bindsym f exec $term -e $fm; mode "default"
	bindsym w exec $term -e nmtui; mode "default"
	bindsym d exec --no-startup-id ~/.config/i3/scripts/showCalendar 1; mode "default"
	bindsym a exec $term -e ~/.config/i3/scripts/openCalcurse; mode "default"
	bindsym u exec $term -e ~/.config/i3/scripts/batchUsbStore; mode "default"
	bindsym m exec --no-startup-id udiskie -ans -f ~/.config/i3/scripts/openNewRangerWindow; mode "default"

        # back to normal: Enter or Escape
	bindsym Escape mode "default"
	bindsym Return mode "default"
}

# Press $Mod+r to enter in the "resize mode" 
# Press esc or return to go back to default mode
set $mode_resize Resize your frame
bindsym $Mod+r mode "$mode_resize"
mode "$mode_resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym $left       resize shrink width 10 px or 10 ppt
        bindsym $down       resize grow height 10 px or 10 ppt
        bindsym $up         resize shrink height 10 px or 10 ppt
        bindsym $right      resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left        resize shrink width 10 px or 10 ppt
        bindsym Down        resize grow height 10 px or 10 ppt
        bindsym Up          resize shrink height 10 px or 10 ppt
        bindsym Right       resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

#######################
# keyboard shortcuts  #
#######################

### Xorg shotcuts ###

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# Touchpad controls
bindsym XF86TouchpadToggle exec ~/.config/i3/toggletouchpad.sh # toggle touchpad

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

### Window manager shortcuts ###

# notifies the i3blocks of the Caps Lock key
bindsym --release Caps_Lock exec pkill -SIGRTMIN+10 i3blocks

# use Mouse+Mod to drag floating windows to their wanted position
floating_modifier $Mod

# terminal
bindsym $Mod+Return exec $term

# restart i3
bindsym $Mod+Shift+r restart

# lock i3
bindsym $Mod+Shift+x exec import -window root /tmp/.lock.png && convert -blur 10x10 /tmp/.lock.png /tmp/.lock.png && i3lock -i /tmp/.lock.png -t -c 335533 -f 

# dmenu (user applications are priority)
bindsym $Mod+d exec --no-startup-id i3-dmenu-desktop
bindsym $Mod+Shift+d exec dmenu_run

# kill focused window
bindsym $Mod+q kill

# change focus (vim keys)
bindsym $Mod+$left focus left
bindsym $Mod+$down focus down
bindsym $Mod+$up focus up
bindsym $Mod+$right focus right

# Change focus acessible (left hand friendly)
bindsym $Mod+z focus left
bindsym $Mod+x focus right

# alternatively, you can use the cursor keys:
bindsym $Mod+Left focus left
bindsym $Mod+Down focus down
bindsym $Mod+Up focus up
bindsym $Mod+Right focus right

# move focused window (vim keys)
bindsym $Mod+Shift+$left move left
bindsym $Mod+Shift+$down move down
bindsym $Mod+Shift+$up move up
bindsym $Mod+Shift+$right move right

# alternatively, you can use the cursor keys:
bindsym $Mod+Shift+Left move left
bindsym $Mod+Shift+Down move down
bindsym $Mod+Shift+Up move up
bindsym $Mod+Shift+Right move right

# split in horizontal orientation
bindsym $Mod+h split h

# split in vertical orientation
bindsym $Mod+v split v

# enter fullscreen mode for the focused container
bindsym $Mod+f fullscreen toggle

# change container layout (stacked, toggle, tabbed split)
bindsym $Mod+s layout stacking
bindsym $Mod+w layout tabbed
bindsym $Mod+e layout toggle split

# stick selected window in screen
bindsym $Mod+Shift+s sticky toggle

# toggle tiling / floating
bindsym $Mod+Shift+space floating toggle

# show keyboard layout options
bindsym $Mod+space exec ~/.config/i3/scripts/doKeyboardThings

# focus the parent container
bindsym $Mod+a focus parent

# reload the configuration file
bindsym $Mod+Shift+c reload

# Show system exit options
bindsym $Mod+Shift+e exec ~/.config/i3/scripts/doPowerThings 

# Show bluetooth options
bindsym $Mod+Shift+b exec ~/.config/i3/scripts/doBluetoothThings

# Changes wallpaper 
bindsym $Mod+Shift+w exec ~/.config/i3/scripts/doWallpaperThings

# Show dropdown terminal
bindsym $Mod+Control+Return [instance="floatingTerm"] scratchpad show; [instance="floatingTerm"] move position center; 

