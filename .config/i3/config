#######################
#       i3 bars       #
#######################

set $indicator-color		#ff0000
set $bg-color		 	#000000
set $active-bg-color		#00ff00
set $active-text-color		#000000
set $inactive-bg-color	 	#000000
set $text-color			#00ff00
set $inactive-text-color	#7777ff
set $urgent-bg-color		#0000aa
set $urgent-text-color		#ffffff

# window colors		border			background		text			indicator
client.focused		$bg-color		$active-bg-color	$active-text-color	$indicator-color 
client.unfocused	$inactive-bg-color	$inactive-bg-color	$inactive-text-color	$indicator-color 
client.focused_inactive	$inactive-bg-color	$inactive-bg-color	$inactive-text-color	$indicator-color 
client.urgent		$urgent-bg-color	$urgent-bg-color	$urgent-text-color	$indicator-color 

# bar
bar {
	separator_symbol " "
	font xft:Droid Sans Mono, FontAwesome 11
	position top
  	status_command i3blocks -c ~/.config/i3/i3blocks.conf
	colors {
		background $bg-color
	    	separator #ffffff
		#			border			background		text
		focused_workspace	$bg-color		$bg-color		$text-color
		inactive_workspace	$inactive-bg-color	$inactive-bg-color	$inactive-text-color
		urgent_workspace	$urgent-bg-color	$urgent-bg-color	$text-color
	}
}

##############################
#  Auto start applications   #
##############################

### Utilities ###

# redshift
exec redshift -c ~/.config/redshift/redshift.conf

# nodm is active so we must ask for some password
exec convert -resize 1440x1200 -blur 10x10 ~/.wallpaper ~/.lock.png && i3lock -i ~/.lock.png -c 335533 -f 

# Floating terminal
exec --no-startup-id while [ 1 ]; do $term -name floatingTerm; done

# Hides the mouse after 3 secs
exec unclutter -idle 3 -root

# Enables noise reduction on pulse audio
exec pactl load-module module-echo-cancel aec_method=webrtc sink_properties=device.description="Noise_Reduction" aec_args="analog_gain_control=0\ digital_gain_control=0" 

# load keyboard configuration:
# exec the file generate by doKeyboardThings script
exec ~/.config/keyboardConfig.sh

## Calcurse
# Synchronize
exec --no-startup-id sleep 60 && calcurse-caldav > /tmp/outDav

# Starts daemon
exec --no-startup-id calcurse --daemon > /tmp/outCal

## Firefox
exec firefox

### Bells and whistles ###

# compositor
exec compton

# wallpaper
exec sleep 5 && feh --bg-fill ~/.wallpaper
