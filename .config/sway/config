# focus the parent container
bindsym $Mod+a focus parent

# reload the configuration file
bindsym $Mod+Shift+r reload

# Show system exit options
bindsym $Mod+Shift+e exec ~/.config/sway/scripts/doPowerThings 

# Show bluetooth options
bindsym $Mod+Shift+b exec ~/.config/sway/scripts/doBluetoothThings

# Changes wallpaper 
bindsym $Mod+Shift+w exec ~/.config/sway/scripts/doWallpaperThings

# Show dropdown terminal
bindsym $Mod+Control+Return [app_id="floatingTerm"] scratchpad show; [app_id="floatingTerm"] move position center;

# Autotile config
bindsym --to-code $Mod+Alt+s exec swaymgr -s 'set spiral'
bindsym --to-code $Mod+Alt+l exec swaymgr -s 'set left'
bindsym --to-code $Mod+Alt+m exec swaymgr -s 'set manual'

